#include <iostream>
#include <cctype>

std::string removeLeadingSpaces(std::string line){
  bool found=false;
  std::string newline;
  for(int i=0;i<line.length();i++){
    if(isspace(line[0])){
      continue;
      std::cout << line[i] << std::endl;
    }
    else {
      newline+=line[i];
    }
  }
  return newline;
}

int main(){
  std::cout << removeLeadingSpaces("       int x = 1;  ");
  return 0;
}
